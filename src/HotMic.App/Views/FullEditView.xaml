<UserControl x:Class="HotMic.App.Views.FullEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:HotMic.App.Controls">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="16" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Border Background="{DynamicResource BackgroundSecondary}" Padding="12" CornerRadius="8" BorderBrush="{DynamicResource Border}" BorderThickness="1">
      <Grid ColumnDefinitions="*,*,*,*,Auto" RowDefinitions="Auto,Auto">
        <TextBlock Text="Input 1" Foreground="{DynamicResource TextSecondary}" Margin="0,0,12,8" />
        <TextBlock Grid.Column="1" Text="Input 2" Foreground="{DynamicResource TextSecondary}" Margin="0,0,12,8" />
        <TextBlock Grid.Column="2" Text="Output" Foreground="{DynamicResource TextSecondary}" Margin="0,0,12,8" />
        <TextBlock Grid.Column="3" Text="Monitor" Foreground="{DynamicResource TextSecondary}" Margin="0,0,12,8" />

        <ComboBox Grid.Row="1" ItemsSource="{Binding InputDevices}" SelectedItem="{Binding SelectedInputDevice1}" DisplayMemberPath="Name" Height="28" Margin="0,0,12,0" />
        <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding InputDevices}" SelectedItem="{Binding SelectedInputDevice2}" DisplayMemberPath="Name" Height="28" Margin="0,0,12,0" />
        <ComboBox Grid.Row="1" Grid.Column="2" ItemsSource="{Binding OutputDevices}" SelectedItem="{Binding SelectedOutputDevice}" DisplayMemberPath="Name" Height="28" Margin="0,0,12,0" />
        <ComboBox Grid.Row="1" Grid.Column="3" ItemsSource="{Binding OutputDevices}" SelectedItem="{Binding SelectedMonitorDevice}" DisplayMemberPath="Name" Height="28" Margin="0,0,12,0" />

        <Button Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" Content="Apply" Command="{Binding ApplyDeviceSelectionCommand}" Style="{DynamicResource SecondaryButtonStyle}" VerticalAlignment="Center" />
      </Grid>
    </Border>

    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <controls:ChannelStripControl DataContext="{Binding Channel1}" Margin="0,0,12,0" />
      <controls:ChannelStripControl DataContext="{Binding Channel2}" Grid.Column="1" Margin="12,0,0,0" />
    </Grid>
  </Grid>
</UserControl>
