<Window x:Class="HotMic.App.Views.PluginBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Plugin"
        Width="420" Height="520"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundPrimary}"
        Foreground="{DynamicResource TextPrimary}">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <ListBox ItemsSource="{Binding Choices}" SelectedItem="{Binding SelectedChoice}" DisplayMemberPath="Name" />

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,8,0" />
      <Button Content="Add" Command="{Binding OkCommand}" Style="{DynamicResource SecondaryButtonStyle}" />
    </StackPanel>
  </Grid>
</Window>
