<Window x:Class="HotMic.App.Views.PluginContainerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="Plugin Container"
        Width="{Binding WindowWidth, Mode=OneWay}" Height="{Binding WindowHeight, Mode=OneWay}"
        MinWidth="{Binding WindowWidth, Mode=OneWay}" MaxWidth="{Binding WindowWidth, Mode=OneWay}"
        MinHeight="{Binding WindowHeight, Mode=OneWay}" MaxHeight="{Binding WindowHeight, Mode=OneWay}"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
  <Grid>
    <skia:SKElement x:Name="SkiaCanvas"
                    PaintSurface="SkiaCanvas_PaintSurface"
                    MouseDown="SkiaCanvas_MouseDown"
                    MouseMove="SkiaCanvas_MouseMove"
                    MouseUp="SkiaCanvas_MouseUp" />
  </Grid>
</Window>
