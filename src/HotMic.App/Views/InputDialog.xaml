<Window x:Class="HotMic.App.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input"
        Width="320"
        Height="140"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E22">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptText"
                   Grid.Row="0"
                   Text="Enter value:"
                   Foreground="#CCCCCC"
                   Margin="0,0,0,8"/>

        <TextBox x:Name="InputTextBox"
                 Grid.Row="1"
                 Background="#2D2D30"
                 Foreground="#FFFFFF"
                 BorderBrush="#3E3E42"
                 Padding="6,4"
                 Margin="0,0,0,16"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="75"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="OkButton_Click"
                    Background="#0E639C"
                    Foreground="#FFFFFF"
                    BorderThickness="0"
                    Padding="8,4"/>
            <Button Content="Cancel"
                    Width="75"
                    IsCancel="True"
                    Click="CancelButton_Click"
                    Background="#3E3E42"
                    Foreground="#CCCCCC"
                    BorderThickness="0"
                    Padding="8,4"/>
        </StackPanel>
    </Grid>
</Window>
