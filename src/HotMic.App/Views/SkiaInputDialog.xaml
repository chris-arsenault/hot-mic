<Window x:Class="HotMic.App.Views.SkiaInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="Input"
        Width="320"
        Height="140"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid>
        <skia:SKElement x:Name="SkiaCanvas"
                        PaintSurface="SkiaCanvas_PaintSurface"
                        MouseDown="SkiaCanvas_MouseDown"
                        MouseMove="SkiaCanvas_MouseMove"/>
        <!-- Hidden TextBox positioned over the input area -->
        <TextBox x:Name="InputTextBox"
                 Margin="17,52,17,0"
                 Height="28"
                 VerticalAlignment="Top"
                 Background="#2A2A32"
                 Foreground="#F0F0F2"
                 CaretBrush="#F0F0F2"
                 BorderBrush="#3A3A44"
                 BorderThickness="1"
                 Padding="8,4"
                 FontFamily="Segoe UI"
                 FontSize="12"
                 KeyDown="InputTextBox_KeyDown"/>
    </Grid>
</Window>
