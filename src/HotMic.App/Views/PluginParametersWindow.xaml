<Window x:Class="HotMic.App.Views.PluginParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plugin Parameters"
        Width="420" Height="520"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundPrimary}"
        Foreground="{DynamicResource TextPrimary}">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Text="{Binding PluginName}" FontSize="18" FontWeight="SemiBold" />

    <ScrollViewer Grid.Row="1" Margin="0,12,0,12">
      <ItemsControl ItemsSource="{Binding Parameters}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <StackPanel Margin="0,0,0,12">
              <DockPanel>
                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" DockPanel.Dock="Left" />
                <TextBlock Text="{Binding DisplayValue}" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Right" />
              </DockPanel>
              <Slider Minimum="{Binding Min}" Maximum="{Binding Max}" Value="{Binding Value, Mode=TwoWay}" />
            </StackPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>

    <Button Grid.Row="2" Content="Close" Command="{Binding CloseCommand}" Style="{DynamicResource SecondaryButtonStyle}" HorizontalAlignment="Right" />
  </Grid>
</Window>
