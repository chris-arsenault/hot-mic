<UserControl x:Class="HotMic.App.Views.MinimalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:HotMic.App.Controls">
  <Border Background="{DynamicResource BackgroundSecondary}" Padding="16" CornerRadius="8">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="12" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,8">
        <TextBlock Text="{Binding Channel1.Name}" FontSize="14" VerticalAlignment="Center" />
        <controls:MeterControl Grid.Column="1" Height="18" Margin="12,0" PeakLevel="{Binding Channel1.PeakLevel}" RmsLevel="{Binding Channel1.RmsLevel}" />
        <TextBlock Grid.Column="2" Text="{Binding Channel1.PeakDbLabel}" FontSize="12" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondary}" />
      </Grid>

      <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto">
        <TextBlock Text="{Binding Channel2.Name}" FontSize="14" VerticalAlignment="Center" />
        <controls:MeterControl Grid.Column="1" Height="18" Margin="12,0" PeakLevel="{Binding Channel2.PeakLevel}" RmsLevel="{Binding Channel2.RmsLevel}" />
        <TextBlock Grid.Column="2" Text="{Binding Channel2.PeakDbLabel}" FontSize="12" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondary}" />
      </Grid>
    </Grid>
  </Border>
</UserControl>
