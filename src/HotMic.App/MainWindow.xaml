<Window x:Class="HotMic.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        xmlns:vm="clr-namespace:HotMic.App.ViewModels"
        Title="HotMic"
        Width="{Binding WindowWidth, Mode=TwoWay}" Height="{Binding WindowHeight, Mode=TwoWay}"
        Left="{Binding WindowX}" Top="{Binding WindowY}"
        WindowStartupLocation="Manual"
        Topmost="{Binding AlwaysOnTop}"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
  <Window.DataContext>
    <vm:MainViewModel />
  </Window.DataContext>

  <Grid>
    <skia:SKElement x:Name="SkiaCanvas"
                    PaintSurface="SkiaCanvas_PaintSurface"
                    MouseDown="SkiaCanvas_MouseDown"
                    MouseMove="SkiaCanvas_MouseMove"
                    MouseUp="SkiaCanvas_MouseUp"
                    MouseWheel="SkiaCanvas_MouseWheel"
                    MouseRightButtonUp="SkiaCanvas_MouseRightButtonUp" />
  </Grid>
</Window>
